// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model authModel {
  id String @id @default(uuid())

  name String
  email String @unique
  password String

  image String?
  imageID String?

  token String
  verified Boolean @default(false)

  posts postModel[]
  friends Json?
  requests Json?

  createdAt DateTime @default(now())
}

model postModel {
  id String @id @default(uuid())

  message String

  image String
  imageID String

  likes Json?
  comments Json?

  userID String
  user authModel @relation(fields: [userID], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
}

model commentModel {
  id String @id @default(uuid())

  comment String
  likes Json?
  replies Json?

  userID String
  createdAt DateTime @default(now())
}

model replyModel {
  id String @id @default(uuid())

  reply String
  likes Json?

  userID String
  createdAt DateTime @default(now())
}

